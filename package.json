{
  "name": "cypress-todo-app-assignment",
  "version": "1.0.0",
  "description": "A full-stack Todo application with React frontend, Node.js backend, and comprehensive Cypress testing framework",
  "main": "index.js",
  "workspaces": [
    "Todo App/frontend",
    "Todo App/backend"
  ],
  "scripts": {
    "clean": "rm -rf node_modules 'Todo App/frontend/node_modules' 'Todo App/backend/node_modules' 'Automation Framework/node_modules'",
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd 'Todo App/frontend' && npm install",
    "install:backend": "cd 'Todo App/backend' && npm install",
    "start:backend": "cd 'Todo App/backend' && npm start",
    "start:frontend": "cd 'Todo App/frontend' && npm start",
    "start": "cd 'Todo App/backend' && npm start & cd ../frontend && npm start & wait",
    "cy:verify": "cd 'Automation Framework' && cypress verify",
    "cy:run": "cd 'Automation Framework' && cypress run",
    "e2e:regression:tests": "cd 'Automation Framework' && cypress run --env grepTags=@Regression,grepFilterSpecs=true",
    "e2e:regression:tests:ci": "cd 'Automation Framework' && cypress run --env grepTags=@Regression,grepFilterSpecs=true",
    "e2e:smoke:tests": "cd 'Automation Framework' && cypress run --env grepTags=@Smoke,grepFilterSpecs=true",
    "e2e:smoke:tests:ci": "cd 'Automation Framework' && cypress run --env grepTags=@Smoke,grepFilterSpecs=true",
    "format": "cd 'Automation Framework' && prettier --write \"../**/*.{js,jsx,ts,tsx,json,css,md,yml,yaml}\" --ignore-path .prettierignore",
    "format:check": "cd 'Automation Framework' && prettier --check \"../**/*.{js,jsx,ts,tsx,json,css,md,yml,yaml}\" --ignore-path .prettierignore",
    "format:fix": "npm run format && npm run lint:fix",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "lint:frontend": "cd 'Todo App/frontend' && npm run lint",
    "lint:fix:frontend": "cd 'Todo App/frontend' && npm run lint:fix",
    "lint:backend": "cd 'Todo App/backend' && npm run lint || true",
    "lint:fix:backend": "cd 'Todo App/backend' && npm run lint:fix || true",
    "code:check": "npm run format:check && npm run lint",
    "code:fix": "npm run format:fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aashir1998/Cypress-Todo-App-Assignment.git"
  },
  "keywords": [
    "cypress",
    "testing",
    "automation",
    "e2e",
    "api",
    "todo-app",
    "react",
    "nodejs",
    "express"
  ],
  "author": "Aashir Ahmed",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/aashir1998/Cypress-Todo-App-Assignment/issues"
  },
  "homepage": "https://github.com/aashir1998/Cypress-Todo-App-Assignment#readme",
  "devDependencies": {
    "@cypress/grep": "^4.1.0",
    "@eslint/js": "^9.20.0",
    "@faker-js/faker": "^9.9.0",
    "concurrently": "^9.2.0",
    "cypress": "^14.5.3",
    "cypress-mochawesome-reporter": "^3.8.2",
    "cypress-plugin-api": "^2.11.2",
    "cypress-recurse": "^1.35.3",
    "cypress-terminal-report": "^7.2.1",
    "cypress-visual-regression": "^5.3.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-cypress": "^4.1.0",
    "globals": "^15.15.0",
    "import": "^0.0.6",
    "prettier": "3.5.1"
  }
}
